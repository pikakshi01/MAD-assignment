<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mad_ques4_new">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MadQues4New">

        <!-- MainActivity with intent filter for Google Sign-In -->
        <activity
            android:name=".MainActivity"
            android:exported="true"> <!-- Add android:exported="true" -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- HomeActivity, which can be used after successful sign-in -->
        <activity
            android:name=".HomeActivity"
            android:exported="true"> <!-- Add android:exported="true" -->
        </activity>

        <!-- Add other activities or services if necessary -->

    </application>

</manifest>
